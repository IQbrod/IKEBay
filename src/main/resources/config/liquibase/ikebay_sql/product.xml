<?xml version="1.0" encoding="utf-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="autoIncrement" value="true"/>

    <changeSet id="000011" author="IQbrod">

        <dropTable tableName="product"/>
        <createTable tableName="product">

                <column name="id" type="int" autoIncrement="${autoIncrement}">
                    <constraints primaryKey="true" nullable="false"/>
                </column>

                <column name="name" type="varchar(100)">
                    <constraints nullable="false"/>
                </column>

                <column name="price" type="float">
                    <constraints nullable="false"/>
                </column>

                <column name="description" type="varchar(1000)">
                    <constraints nullable="false"/>
                </column>

                <column name="specification" type="varchar(1000)">
                    <constraints nullable="false"/>
                </column>

                <column name="photolink" type="varchar(100)">
                    <constraints nullable="false"/>
                </column>
                
            </createTable>

            <loadData encoding="UTF-8"
                  file="config/liquibase/ikebay_sql/product.csv"
                  separator=";"
                  tableName="product"/>
    </changeSet>
</databaseChangeLog>